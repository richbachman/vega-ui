{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "target": "es6",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "sourceMap": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src", "./build.mts"],
  "exclude": ["dist", "build", "node_modules"]
}
